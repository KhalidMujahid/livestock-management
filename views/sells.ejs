<%- include("partials/head") -%>

  <body>
    <header class="d-flex p-4 justify-content-between bg-dark">
      <div class="brand-logo">
        <h2 class="text-white">Livestock Management System</h2>
      </div>
    </header>
    <main>
      <div class="row" style="overflow: hidden;">
        <div class="col-md-2 p-3 bg-dark" style="height: calc(100vh - 90px);overflow: hidden;">
          <div class="d-flex flex-column">
            <div>
              <p class="btn btn-outline-light w-100"><a href="/">Home <i class="fas fa-home"></i></a></p>
              <p class="btn btn-light w-100"><a href="/sells" class="text-primary">Sells <i class="fas fa-plus"></i></a>
              </p>
              <p class="btn btn-outline-light w-100"><a href="/customers">Customers <i class="fas fa-users"></i></a></p>
              <p class="btn btn-outline-light w-100"><a href="/add">Add livestock <i class="fas fa-plus"></i></a></p>
              <p class="btn btn-outline-light w-100"><a href="/about">About us <i class="fas fa-users"></i></a></p>
            </div>
            <div class="text-center">
              <h6 class="text-white mt-5">Powered by Hi-Tech</h6>
              <p class="text-white">&copy; 2022</p>
            </div>
          </div>
        </div>
        <div class="col d-flex justify-content-center my-2" style="overflow-y: scroll;height: calc(100vh - 90px);">
          <% if(error) {%>
            <div class="alert alert-danger flex-column d-flex justify-content-center align-items-center"
              style="height: 150px;">
              <p>
                <%= error %>
              </p>
              <a href="/sells" class="text-dark"><i class="fas fa-arrow-left"></i> Go back</a>
            </div>
            <%} else {%>
              <form class="border w-50 p-4" style="height: 100vh;" action="/sells" method="post">
                <div class="title d-flex justify-content-between align-items-center">
                  <div>
                    <a href="/info" style="color: blue;"><i class="fas fa-arrow-left"></i>Go back</a>
                  </div>
                  <h4>Livestock Sells Form</h4>
                </div>
                <div class="my-3">
                  <h4>Customer personal info</h4>
                </div>
                <div class="input-group my-3">
                  <div class="form-group">
                    <input name="fname" type="text" placeholder="first name" class="form-control">
                  </div>
                  <div class="form-group">
                    <input name="lname" type="text" placeholder="last name" class="mx-3 form-control">
                  </div>
                </div>
                <div class="input-group my-3">
                  <div class="form-group">
                    <input name="phone_number" type="number" placeholder="phone number" class="form-control">
                  </div>
                  <div class="form-group">
                    <input name="email" type="email" placeholder="example@email.com" class="mx-3 form-control">
                  </div>
                </div>
                <div class="my-3">
                  <h4>Livestock info</h4>
                </div>
                <div class="form-group my-3">
                  <select class="form-select" name="dog">
                    <option>----------------------Select Dog-----------------</option>
                    <% dogs.forEach(dog=> {%>
                      <option value="<%= dog._id %>">
                        <%= dog.name %>
                      </option>
                      <%})%>
                  </select>
                </div>
                <div>
                  <h4>Seller info</h4>
                </div>
                <div class="input-group my-3">
                  <div class="form-group">
                    <input name="seller_fname" type="text" placeholder="first name" class="form-control">
                  </div>
                  <div class="form-group">
                    <input name="seller_lname" type="text" placeholder="last name" class="mx-3 form-control">
                  </div>
                </div>
                <div class="input-group my-3">
                  <div class="form-group">
                    <input name="seller_phone_number" type="text" placeholder="phone number" class="form-control">
                  </div>
                  <div class="form-group">
                    <input name="seller_email" type="email" placeholder="email@email.com" class="mx-3 form-control">
                  </div>
                </div>
                <div class="button-group my-3">
                  <div class="form-group">
                    <button type="submit" class="btn btn-success">Save edit <i class="fas fa-save"></i></button>
                  </div>
                </div>
              </form>
              <%}%>
        </div>
      </div>
    </main>
  </body>

  </html>